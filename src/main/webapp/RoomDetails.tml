<html t:type="layout" title="Room Details"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<head></head><body>
    <p></p>

    <div>
        Room Name: ${room.roomName}
    </div><br/>
    <div>
        Room Type: ${room.roomType}
    </div><br/>
    <div>
        Description:<br/>
        <t:form>

            <t:textarea t:readonly="readonly" t:value="room.description" cols="50" rows="10"/>
        </t:form><br/>
    </div>
    <p><t:if t:test="admin">
        <t:ActionLink t:context="room.roomId" t:id="deleteRoomLink">Delete Room</t:ActionLink></t:if>
    </p>
    <p><t:PageLink t:page="Rooms">Back</t:PageLink></p>
</body>
<p:sidebar><br/>
        <h1>Welcome:</h1>
        <center><user>${user.firstName} ${user.lastName}</user></center>
<br/><br/>
    </p:sidebar>
</html>
